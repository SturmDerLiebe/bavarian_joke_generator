extends layout.pug

block style
    link(rel="stylesheet" href="keyword/styles.css")

block main
    h1= KEYWORD
    each joke, index in JOKE_DATA
        +joke_card(joke.id, joke.content, joke.submitted_by)
        unless (index === JOKE_DATA.length-1)
            hr

mixin joke_card(id, content, username)
    figure(id=id)
        p= content
        figcaption submitted by #{user}
