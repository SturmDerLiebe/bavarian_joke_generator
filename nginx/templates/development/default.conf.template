server {
    listen 80;
    listen [::]:80;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'sha384-7FvcOpf85HsGS89sLrvOOHZYqgaEqbfUi87HhpbqbndTSFw+XpzbDMK5ZcxD28fe'; form-action 'self'; base-uri 'self';";
    add_header X-Content-Type-Options "nosniff";

    error_page 400 /errors/400_wrong_input.html;
    error_page 404 /errors/404_joke_not_found.html;
    default_type text/html;

    location / {
        root /usr/share/nginx/html;
    }

    location /errors/ {
        root /usr/share/nginx/html;
        internal;
    }

    location ^~ /assets/ {
        root /usr/share/nginx;
    }

    location ^~ /RegEx/ {
        root /usr/share/nginx;
    }

    location ^~ /ssr/ {
        # pass will exchange ssr/ for /:
        proxy_pass "http://${SSR_HOST}:${SSR_PORT}/";
        proxy_http_version 1.1;
        proxy_set_header   "Connection" "";
        proxy_intercept_errors on;
    }

    location ^~ /auth/ {
        default_type application/json;
        # pass will exchange auth/ for /:
        proxy_pass "http://${AUTH_HOST}:${AUTH_PORT}/";
        proxy_http_version 1.1;
        proxy_set_header   "Connection" "";
        # No error pages -> Do not intercept errors
    }

    location ~ \.css$ {
        default_type text/css;
        root /usr/share/nginx/html;
    }

    location ~ \.js$ {
        default_type text/javascript;
        root /usr/share/nginx/html;
    }
}

